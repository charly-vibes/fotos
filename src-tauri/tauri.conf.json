{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Fotos",
  "identifier": "io.github.charly.fotos",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../src-ui"
  },
  "app": {
    "windows": [
      {
        "title": "Fotos",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "tooltip": "Fotos"
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline'",
      "dangerousDisableAssetCspModification": {
        "script": ["'unsafe-eval'"]
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": [
      "resources/tessdata/*"
    ],
    "externalBin": [
      "fotos-mcp"
    ]
  }
}
